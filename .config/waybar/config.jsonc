    },
    "custom/fan": {
    "exec": "sensors | awk '/fan1:/ {print $2,$3}'",
    "interval": 2,
     },
    "custom/cpu_temp": {
    "exec": "sensors | awk '/Package id 0:/ {gsub(/\\+/,\"\", $4); print $4}'",
    "interval": 2,
     },
    "custom/ssd_temp": {
    "exec": "sensors | awk '/Sensor 1:/ {gsub(/\\+/,\"\", $3); print $3}'",
    "interval": 2,
     },
